
<div class="new-main">
  <%= image_tag "form-up.png", class: "form-flame" %>
  <%= form_with model: @schedule, class: "schedule-form", local: true, id: "schedule-form" do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_time, class: "form-label" %>
      <%= f.date_field :start_time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_time, class: "form-label" %>
      <%= f.date_field :end_time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_id, class: "form-label" %>
      <%= link_to "追加", index2_schedules_path, class: "form-add" %>
      <%= f.collection_select :category_id, @categories, :id, :name, { include_blank: '---' }, { class: "form-select" } %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Write", class: "btn-write" %>
    </div>
  <% end %>
</div>

