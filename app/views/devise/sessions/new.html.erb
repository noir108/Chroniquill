<div class='account-page' id='account-page'>
  <div class='account-page__header'>
    <h2>Log in</h2>
    <h5>登録しているユーザーでログイン</h5>

    <div class='user-form'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email" %>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
        </div>
        <div class="actions">
          <%= f.submit "Open", id: "login-button", class: 'btn'%>
        </div>
      <% end %>
    </div>
    <%= link_to "Craft Your Planner", new_user_registration_path, class: "user-link" %><br />
  </div>
  <ul class="bg-bubbles">
		<li></li>
